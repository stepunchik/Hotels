<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_hotel_info__detailed"
        android:background="@color/lightest_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".home.HotelInfo">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/activity_hotel_info__hotelImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="@color/gray"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/activity_hotel_info__summaryInformation"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/activity_hotel_info__addToFavourites"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/baseline_favorite_border_24"
            android:contentDescription="@string/favourites_ic_hint"
            app:layout_constraintEnd_toEndOf="@+id/activity_hotel_info__hotelImage"
            app:layout_constraintTop_toTopOf="@+id/activity_hotel_info__hotelImage" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_hotel_info__summaryInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_element_border"
            android:padding="10dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_hotel_info__hotelImage"
            app:layout_constraintBottom_toTopOf="@+id/activity_hotel_info__bookingSection" >

            <TextView
                android:id="@+id/activity_hotel_info__hotelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="Название отеля"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/activity_hotel_info__grade"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/activity_hotel_info__grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/grade_bg"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginStart="10dp"
                tools:text="Средний балл"
                app:layout_constraintTop_toBottomOf="@+id/activity_hotel_info__hotelName"
                app:layout_constraintStart_toStartOf="@id/activity_hotel_info__hotelName" />

            <TextView
                android:id="@+id/activity_hotel_info__feedbackQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                tools:text="Количество отзывов"
                app:layout_constraintTop_toBottomOf="@id/activity_hotel_info__hotelName"
                app:layout_constraintTop_toTopOf="@+id/activity_hotel_info__grade"
                app:layout_constraintStart_toEndOf="@+id/activity_hotel_info__grade"
                app:layout_constraintBottom_toBottomOf="@+id/activity_hotel_info__grade"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_hotel_info__bookingSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_element_border"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_hotel_info__summaryInformation"
            app:layout_constraintBottom_toTopOf="@+id/activity_hotel_info__feedbackSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/activity_hotel_info__bookingSectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/booking_section_title"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/activity_hotel_info__manQuantity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/activity_hotel_info__manQuantity"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/element_border"
                android:drawableStart="@drawable/baseline_supervisor_account_24"
                android:padding="7dp"
                android:drawablePadding="5dp"
                android:layout_marginTop="15dp"
                android:inputType="number"
                android:autofillHints="name"
                android:hint=""
                android:maxLength="2"
                app:layout_constraintTop_toBottomOf="@id/activity_hotel_info__bookingSectionTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/activity_hotel_info__dateCheckInCheckOut"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/activity_hotel_info__dateCheckInCheckOut"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:background="@drawable/element_border"
                android:drawableStart="@drawable/baseline_date_range_24"
                android:focusable="false"
                android:inputType="date"
                android:autofillHints="creditCardExpirationDate"
                android:padding="7dp"
                android:drawablePadding="5dp"
                android:hint="@string/checkin_checkout_hint"
                app:layout_constraintTop_toTopOf="@id/activity_hotel_info__manQuantity"
                app:layout_constraintStart_toEndOf="@id/activity_hotel_info__manQuantity"
                app:layout_constraintTop_toBottomOf="@id/activity_hotel_info__bookingSectionTitle"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/activity_hotel_info__bookButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/button_gray"
                android:textColor="@color/black"
                android:text="@string/book_button_text"
                app:layout_constraintTop_toBottomOf="@+id/activity_hotel_info__manQuantity"
                app:layout_constraintStart_toStartOf="@id/activity_hotel_info__manQuantity"
                app:layout_constraintEnd_toEndOf="@id/activity_hotel_info__dateCheckInCheckOut" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_hotel_info__feedbackSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_element_border"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/activity_hotel_info__bookingSection"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/activity_hotel_info__feedbackSectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_section_title"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/activity_hotel_info__feedbackTextInput"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed"/>

            <EditText
                android:id="@+id/activity_hotel_info__feedbackTextInput"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/element_border"
                android:padding="10dp"
                android:maxLength="100"
                android:inputType="text"
                android:autofillHints="name"
                android:hint="@string/feedback_hint"
                app:layout_constraintTop_toBottomOf="@+id/activity_hotel_info__feedbackSectionTitle"
                app:layout_constraintBottom_toTopOf="@id/activity_hotel_info__sendFeedback"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/activity_hotel_info__sendFeedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/leave_feedback_button_text"
                app:layout_constraintTop_toBottomOf="@id/activity_hotel_info__feedbackTextInput"
                app:layout_constraintStart_toStartOf="@id/activity_hotel_info__feedbackTextInput"
                app:layout_constraintEnd_toEndOf="@+id/activity_hotel_info__feedbackTextInput"
                app:layout_constraintBottom_toTopOf="@id/activity_hotel_info__feedbacks"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity_hotel_info__feedbacks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_hotel_info__sendFeedback"
                app:layout_constraintStart_toStartOf="@id/activity_hotel_info__sendFeedback"
                app:layout_constraintEnd_toEndOf="@id/activity_hotel_info__sendFeedback"
                tools:listitem="@layout/feedback_item"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>