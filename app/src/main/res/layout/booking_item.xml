<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/booking_item__item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:padding="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_item">

    <TextView
        android:id="@+id/booking_item_hotelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        tools:text="Название отеля"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/booking_item__BookingDates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:text="Даты бронирования"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/booking_item_hotelName"
        app:layout_constraintBottom_toTopOf="@id/booking_item__personQuantity"/>

    <TextView
        android:id="@+id/booking_item__personQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:paddingVertical="5dp"
        tools:text="Количество человек"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/booking_item__BookingDates"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/booking_item__deleteButton"
        app:drawableStartCompat="@drawable/baseline_supervisor_account_24" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/booking_item__deleteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/booking_item_button_text"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/booking_item__personQuantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/booking_item__BookingDates"/>

</androidx.constraintlayout.widget.ConstraintLayout>